<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fragment_background">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back2"
        app:layout_constraintBottom_toBottomOf="@id/modelPricesTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/modelPricesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Model Prices"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"/>

    <!-- Vehicle Type -->
    <TextView
        android:id="@+id/vehicleTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Vehicle Type"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/modelPricesTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vehicleTypeValue"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/vehicleTypeTitle"
        app:layout_constraintStart_toEndOf="@id/vehicleTypeTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Brand -->
    <TextView
        android:id="@+id/brandTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/fragment_background"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Brand"
        app:layout_constraintTop_toBottomOf="@id/vehicleTypeTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/brandValue"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/brandTitle"
        app:layout_constraintStart_toEndOf="@id/brandTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Model -->
    <TextView
        android:id="@+id/modelTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/fragment_background"
        android:text="Model"
        app:layout_constraintTop_toBottomOf="@id/brandTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/modelValue"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/fragment_background"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/modelTitle"
        app:layout_constraintStart_toEndOf="@id/modelTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Model Year -->
    <TextView
        android:id="@+id/modelYearTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:text="Model Year"
        app:layout_constraintTop_toBottomOf="@id/modelTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/modelYearValue"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/modelYearTitle"
        app:layout_constraintStart_toEndOf="@id/modelYearTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fuel Type -->
    <TextView
        android:id="@+id/fuelTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:text="Fuel Type"
        app:layout_constraintTop_toBottomOf="@id/modelYearTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fuelTypeValue"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:background="@drawable/fragment_background"
        app:layout_constraintTop_toTopOf="@id/fuelTypeTitle"
        app:layout_constraintStart_toEndOf="@id/fuelTypeTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fipe Code -->
    <TextView
        android:id="@+id/fipeCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/fragment_background"
        android:text="Fipe Code"
        app:layout_constraintTop_toBottomOf="@id/fuelTypeTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fipeCodeValue"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/fragment_background"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/fipeCodeTitle"
        app:layout_constraintStart_toEndOf="@id/fipeCodeTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Reference Month -->
    <TextView
        android:id="@+id/referenceMonthTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:text="Reference Month"
        app:layout_constraintTop_toBottomOf="@id/fipeCodeTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/referenceMonthValue"
        android:layout_width="0dp"
        android:background="@drawable/fragment_background"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/referenceMonthTitle"
        app:layout_constraintStart_toEndOf="@id/referenceMonthTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fuel Initials -->
    <TextView
        android:id="@+id/fuelInitialsTitle"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="40dp"
        android:background="@drawable/fragment_background"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Fuel Initials"
        app:layout_constraintTop_toBottomOf="@id/referenceMonthTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fuelInitialsValue"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:background="@drawable/fragment_background"
        android:textSize="20sp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/fuelInitialsTitle"
        app:layout_constraintStart_toEndOf="@id/fuelInitialsTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Price -->

    <TextView
        android:id="@+id/PriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/fragment_background"
        android:text="Price"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fuelInitialsTitle"
        app:layout_constraintTop_toBottomOf="@+id/fuelInitialsTitle" />

    <!-- ProgressBar -->


    <TextView
        android:id="@+id/PriceValue"
        android:layout_width="262dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/fragment_background"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuelInitialsValue" />

    <ImageView
        android:id="@+id/currencyBtn"
        android:layout_width="57dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/currency"
        app:layout_constraintEnd_toStartOf="@+id/PriceValue"
        app:layout_constraintTop_toBottomOf="@+id/PriceTitle" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/PriceValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading TextView -->
    <TextView
        android:id="@+id/loadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Error TextView -->
    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error fetching data. Please retry."
        app:layout_constraintTop_toBottomOf="@id/loadingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Retry Button -->
    <Button
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        app:layout_constraintTop_toBottomOf="@id/errorTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/ShareBtn"
        android:layout_width="33dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/share" />



</androidx.constraintlayout.widget.ConstraintLayout>
